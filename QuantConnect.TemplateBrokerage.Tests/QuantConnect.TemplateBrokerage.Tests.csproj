        <IsPackable>false</IsPackable>
        <Copyright>Copyright Â©  2021</Copyright>
        <TestProjectType>UnitTest</TestProjectType>
        <OutputPath>bin\$(Configuration)\</OutputPath>
        <Product>QuantConnect.TemplateBrokerage.Tests</Product>
